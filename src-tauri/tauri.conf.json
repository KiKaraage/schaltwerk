{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "schaltwerk",
  "version": "0.3.2",
  "identifier": "com.mariuswichtner.schaltwerk",
  "build": {
    "beforeDevCommand": "node scripts/package-manager.mjs run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "node scripts/package-manager.mjs run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Schaltwerk",
        "maximized": true,
        "width": 1280,
        "height": 720,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://github.com/2mawi2/schaltwerk/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVERjk0QjM3OUJDMTYxRjcKUldUM1ljR2JOMHY1N1VhVnBuS3crL1hmckpCWEI4bnVwN1RCazU1NEkrNWgxMC9USW5KeDArTHYK"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg",
      "deb",
      "rpm",
      "appimage"
    ],
    "publisher": "Marius Wichtner",
    "copyright": "Â© 2024 Marius Wichtner",
    "category": "DeveloperTools",
    "shortDescription": "Visual interface for managing Para sessions",
    "longDescription": "Schaltwerk provides a powerful terminal-based interface for managing and monitoring Para development sessions with real-time status updates.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "11.0",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
